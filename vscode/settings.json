// Place your settings in this file to overwrite the default settings
{
  "editor.tabSize": 2,
  "editor.fontSize": 15,
  "editor.fontLigatures": true,
  "editor.fontFamily": "FiraCode-Retina, Iosevka, Inconsolata, Menlo, Monaco, 'Courier New', monospace",
  "editor.minimap.enabled": false,
  "editor.maxTokenizationLineLength": 80000,
  "editor.renderWhitespace": "trailing",

  "explorer.openEditors.visible": 1,
  "workbench.sideBar.location": "right",
  "workbench.colorTheme": "Bluloco Light Italic",
  "workbench.iconTheme": "Monokai Pro (Filter Spectrum) Icons",
  "workbench.editor.openPositioning": "last",
  "diffEditor.diffAlgorithm": "advanced",

  "files.defaultLanguage": "markdown",
  "telemetry.enableTelemetry": false, 
  "search.quickOpen.history.filterSortOrder": "recency",
  "sort-imports.on-save": false,
  "sort-imports.default-sort-style": "module",
  "[python]": {
    "editor.tabSize": 4
  },
  
  "javascript.referencesCodeLens.enabled": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true
  },

  "files.associations": {
    "*.react.js": "javascriptreact",
    "*.jsx": "javascriptreact",
    "*.svelte": "svelte",
    "*.pcss": "postcss",
    "Appfile": "ruby",
    "Fastfile": "ruby",
    "Matchfile": "ruby",
    "*.css": "postcss",
    "Snapfile": "ruby",
    ".workhorseenv": "shellscript",
    ".mlenvrc": "shellscript",
    ".gcloudignore": "shellscript"
  },
  "workbench.editorAssociations": {
    "*.hex": "hexEditor.hexedit",
    "*.ipynb": "jupyter.notebook.ipynb",
    "*.wav": "hexEditor.hexedit"
  },

  "emmet.showExpandedAbbreviation": "never",
  "emmet.includeLanguages": {
    "postcss": "css"
  },

  "prettier.requireConfig": true,
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false,
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "svelte.enable-ts-plugin": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.importModuleSpecifier": "relative",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.tsserver.useSeparateSyntaxServer": false,
  "workbench.preferredDarkColorTheme": "Monokai Pro (Filter Spectrum)",
  "workbench.preferredLightColorTheme": "Bluloco Light Italic",
  "window.autoDetectColorScheme": true,
  "python.defaultInterpreterPath": "python3",
  "python.formatting.provider": "black",
  "terminal.integrated.shell.osx": "/bin/zsh",
  "eslint.alwaysShowStatus": true,
  "editor.suggest.localityBonus": true,
  "terminal.integrated.fontSize": 13,
  "editor.stickyScroll.enabled": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "cSpell.userWords": [
    "Sindre"
  ]
}